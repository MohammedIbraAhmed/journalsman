{
  "name": "synfind-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test:integration": "cd apps/web && npm run test:integration",
    "test:story": "cd apps/web && npm run test -- --reporter=verbose",
    "test:coverage": "cd apps/web && npm run test:coverage",
    "test:a11y": "cd apps/web && npm run test:a11y",
    "qa:validate": "npm run lint && npm run type-check && npm run test && npm run test:integration && npm run build",
    "story:complete": "npm run qa:validate && git add . && git commit -m 'feat: complete story implementation with QA validation'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.0.0"
}
